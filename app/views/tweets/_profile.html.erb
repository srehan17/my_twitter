<article class="panel">

  <p class="panel-heading">
    Profile</p>
  <% if user_signed_in? %>
    <div class="field">
      <label for="name">Name</label>
      <div class="control">
        <%= current_user.name %>
      </div>
    </div>
    <div class="field">
      <label for="username">Username</label>
      <div class="control">
        <span class="icon">
          <i class="fa fa-user" aria-hidden="true"></i>
        </span>
        <%= current_user.username %>
      </div>
    </div>
    <div class="field">
      <label for="email">Email</label>
      <div class="control">
        <span class="icon">
          <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
        <%= current_user.email %>
      </div>
    </div>
    <div class="field">
      <div class="control has-text-centered">
        <%= link_to 'Update Profile', edit_user_registration_path, class: "button has-background-grey-light" %>
      </div>
    </div>

  <% end %>
  <br/>
</article>