<div class="container">
  <% @tweets.each do |tweet| %>
    <article class="media box">
      <figure class="media-left">
        <p class="image">
          <img class="is-rounded is-64x64" src="https://bulma.io/images/placeholders/64x64.png" alt="Icon">
        </p>
      </figure>
      <div class="media-content">
        <p><%= tweet.tweet %></p>
        <strong class="is-uppercase">
          <small><%= tweet.user&.name %></small>
        </strong>
        <!-- <small><%= tweet.user&.username %></small><br/> -->

        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to tweet_path(tweet), class: "level-item" do %>
            <span class="icon">
              <i class="fa fa-link" aria-hidden="true"></i>
            </span>
          <% end %>
          <%= link_to 'Like', class: "level-item" do %>
          <span class="icon">
            <i class="fa fa-heart" aria-hidden="true"></i>
          </span>
        <% end %>
        <%= link_to 'Comment', class: "level-item" do %>
        <span class="icon">
          <i class="fa fa-comment" aria-hidden="true"></i>
        </span>
      <% end %>
      <% if user_signed_in? && current_user.id == tweet.user_id %>
        <%= link_to edit_tweet_path(tweet), class:"level-item" do %>
        <span class="icon">
          <i class="fa fa-pencil" aria-hidden="true"></i>
        </span>
      <% end %>
      <%= link_to tweet, method: :delete, data: {confirm: "Are you sure you want to delete this tweet?" } do %>
      <span class="icon">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      </span>
    <% end %>
  </div>
</nav>
<% end %>
</div>
</article>
<% end %>
</div>