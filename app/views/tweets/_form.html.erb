<%= simple_form_for(@tweet) do |f| %>

<%= f.error_notification %>
<%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%#= gravatar_image_tag('junk', :alt => 'Github Default Gravatar', :gravatar => { :default => 'https://assets.github.com/images/gravatars/gravatar-140.png' }) %>
    <div class="form-inputs">
      <div class="field">
        <div class="control">
          <%= f.input :tweet, label_html: {class: "label is-uppercase"}, input_html: { class: "textarea" }, autofocus: true, wrapper: false, placeholder: "Tweet about it" %>
        </div>
      </div>
    </div>
    <br/>
    <div class="form-actions">
      <%= f.button :submit, class: "button is-info" %>
    </div>
  <% end %>