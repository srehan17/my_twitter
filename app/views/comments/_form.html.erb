<%= simple_form_for [@tweet, @tweet.comments.build] do |f| %>

<%= f.error_notification %>

<div class="form-inputs">
  <div class="field">
    <div class="control">
      <%= f.input :commenter_name, label_html: { class: "label is-uppercase"}, label: "Name", input_html: { class: "input" }, autofocus: true, wrapper: false, placeholder: "Please comment" %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body, label_html: { class: "label is-uppercase"}, label: "Comment", input_html: { class: "textarea" }, autofocus: true, wrapper: false, placeholder: "Please comment" %>
    </div>
  </div>
</div>

<br/>
<div class="form-actions">
  <%= f.button :submit, class: "button is-info" %>
</div>
<% end %>