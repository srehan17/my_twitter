<% provide(:title, "Log In")%>
  <section class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-4">

          <!-- <h1 class="title is-2">Log In</h1> -->

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-inputs">
            <div class="field">
              <div class="control">
                <%= f.input :email, required: false, autofocus: true, wrapper: false, label_html: { class: "label" }, input_html: { autocomplete: "email", class: "input" } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :password, required: false, wrapper: false, label_html: { class: "label" }, input_html: { autocomplete: "current-password", class: "input" } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>
          </div>

          <br/>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "button is-success" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</section>